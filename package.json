{
    "name": "ts-base",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Erickson Nascimento <erickson.nascimento@movile.com>",
    "license": "MIT",
    "scripts": {
        "start": "node dist/main/server.js",
        "build": "rimraf dist && tsc -p tsconfig-build.json",
        "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
        "test": "dotenv -e .env.test -- jest --passWithNoTests --no-cache --runInBand",
        "coverage": "npm test -- --coverage --watchAll=false",
        "test:watch": "npm t -- --watch",
        "test:ci": "npm test -- --coverage",
        "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
        "test:unit": "npm test -- --watch -c jest-unit-config.js",
        "test:integration": "dotenv -e .env.test -- npm run test -- -c jest-integration-config.js",
        "migrate:dev": "npx prisma migrate dev"
    },
    "dependencies": {
        "@prisma/client": "^3.10.0",
        "coveralls": "^3.1.1",
        "express": "^4.17.3",
        "git-commit-msg-linter": "^4.1.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/faker": "^6.6.9",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "dotenv": "^16.0.0",
        "dotenv-cli": "^5.0.0",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "faker": "^6.6.6",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-environment-node": "^27.5.1",
        "jest-mock-extended": "2.0.4",
        "module-alias": "^2.2.2",
        "nanoid": "^3.3.1",
        "pg": "^8.7.3",
        "prisma": "^3.10.0",
        "testcontainers": "^8.4.0",
        "ts-jest": "^27.1.3",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.2"
    },
    "_moduleAliases": {
        "@": "dist"
    },
    "engines": {
        "node": "16.x"
    },
    "prisma": {
        "schema": "src/infra/db/prisma/schema.prisma"
    }
}
